#!/usr/bin/env bash

ai() {
	local assignment name types warnings=()

	if [[ -t 1 ]]; then
		local green=$'\e[32m'
		local yellow=$'\e[33m'
		local reset=$'\e[0m'
	else
		local green=''
		local yellow=''
		local reset=''
	fi

	while IFS= read -r; do
		assignment=${REPLY#alias }
		name=${assignment%=*}

		mapfile -t types < <(type -at "$name")

		for type in "${types[@]}"; do
			case "$type" in
			builtin)
				warnings+=("The alias $yellow$name$reset overrides a builtin of the same name.")
				;;
			file)
				warnings+=("The alias $yellow$name$reset overrides a shell command of the same name.")
				;;
			esac
		done

	done < <(alias)

	if ((${#warnings[@]} > 0)); then
		for warning in "${warnings[@]}"; do
			printf '%s\n' "$warning"
		done

		return 1
	fi

	printf "${green}No shell command or builtin is overridden.$reset\n"
}
